<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F8F5FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- FLECHA ATRÁS -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btnVolverCrear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_flecha_colores" />
        </LinearLayout>

        <!-- TÍTULO PANTALLA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva nota"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textColor="#5A4FCF"/>

        <!-- TÍTULO NOTA -->
        <EditText
            android:id="@+id/etTituloNota"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Título"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textSize="17sp"
            android:layout_marginBottom="12dp"/>

        <!-- COLOR NOTA -->
        <EditText
            android:id="@+id/etColorNota"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Color"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textSize="17sp"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="12dp"/>

        <!-- DESCRIPCIÓN -->
        <EditText
            android:id="@+id/etDescripcionNota"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="top"
            android:hint="Descripción"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <!-- BOTÓN GUARDAR -->
        <Button
            android:id="@+id/btnGuardarNota"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Guardar"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:backgroundTint="#7E57C2"/>

    </LinearLayout>
</ScrollView>
