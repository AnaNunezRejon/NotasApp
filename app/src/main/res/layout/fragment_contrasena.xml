<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Flecha -->
        <ImageView
            android:id="@+id/btnVolver"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_flecha_colores"
            android:layout_marginBottom="12dp"/>

        <!-- Barra progreso -->
        <View
            android:layout_width="160dp"
            android:layout_height="4dp"
            android:background="#5A4FCF"
            android:layout_marginBottom="24dp"/>

        <!-- T칤tulo -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Piensa una contrase침a que solo t칰 conozcas 游땕"
            android:textSize="20sp"
            android:textColor="#2D2D2D"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <!-- Subt칤tulo -->
        <TextView
            android:id="@+id/txtSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea una contrase침a segura para mantener tu cuenta protegida."
            android:textSize="14sp"
            android:textColor="#7A7A7A"
            android:layout_marginBottom="24dp"/>

        <!-- Contrase침a -->
        <EditText
            android:id="@+id/etPass1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Contrase침a"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#AFAFAF"
            android:layout_marginBottom="12dp"/>

        <!-- Repetir contrase침a -->
        <EditText
            android:id="@+id/etPass2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Repite contrase침a"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#AFAFAF"
            android:layout_marginBottom="24dp"/>

        <!-- Bot칩n siguiente -->
        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Siguiente"
            android:enabled="false"
            android:backgroundTint="#AFA2F3"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
