<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Flecha para volver atrÃ¡s -->
        <ImageView
            android:id="@+id/btnVolver"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_flecha_colores"
            android:layout_marginBottom="12dp" />

        <!-- Barra superior estilo progreso -->
        <View
            android:layout_width="120dp"
            android:layout_height="4dp"
            android:background="#5A4FCF"
            android:layout_marginBottom="24dp" />

        <!-- TÃ­tulo -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinos quiÃ©n eres y seguimos ðŸ˜Š"
            android:textColor="#2D2D2D"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <!-- SubtÃ­tulo -->
        <TextView
            android:id="@+id/txtSubtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escribe tu nombre y apellidos para seguir adelante."
            android:textSize="14sp"
            android:textColor="#7A7A7A"
            android:layout_marginBottom="24dp" />

        <!-- Campo Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#AFAFAF"
            android:layout_marginBottom="12dp" />

        <!-- Campo Apellidos -->
        <EditText
            android:id="@+id/etApellidos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Apellidos"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#AFAFAF"
            android:layout_marginBottom="12dp" />

        <!-- Campo Fecha -->
        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Fecha de nacimiento"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#AFAFAF"
            android:layout_marginBottom="40dp" />

        <!-- BotÃ³n Siguiente -->
        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Siguiente"
            android:textColor="@android:color/white"
            android:backgroundTint="#AFA2F3"
            android:enabled="false" />
    </LinearLayout>
</ScrollView>
