<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F8F5FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- FLECHA ATRÁS -->
        <ImageView
            android:id="@+id/btnVolverEditar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_flecha_colores"
            android:layout_marginBottom="20dp"/>

        <!-- TÍTULO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar nota"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#5A4FCF"
            android:layout_marginBottom="20dp"/>

        <!-- CAMPOS -->
        <EditText
            android:id="@+id/etTituloEditar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Título"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textSize="17sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etColorEditar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Color"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textSize="17sp"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etDescripcionEditar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Descripción"
            android:gravity="top"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="25dp"/>

        <!-- BOTONES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Eliminar nota"
                android:textColor="@android:color/white"
                android:backgroundTint="#D9534F"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btnGuardarCambios"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Guardar cambios"
                android:textColor="@android:color/white"
                android:backgroundTint="#7E57C2"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
